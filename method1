using System;


namespace word

{
    class Program

    {
        static void Main(string[] args)
        {
            Word("Tələbəlik çox gözəldir", 'o');
        }
        static void Word(string text, char search, int count = 0)
        {
            for (int i = 0; i < text.Length; i++)
            {
                if (text[i] == search)
                    count++;
            }
            Console.Write(count);
            return ;
        }
    }
}
